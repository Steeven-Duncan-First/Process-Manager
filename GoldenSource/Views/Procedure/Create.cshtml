@model GoldenSource.Models.Procedure

@{
    ViewData["Title"] = "Nouvelle Procédure";
}

<div class="container-fluid">
    <div class="row">
        <div class="col-md-12">
            <h1 class="mb-4">Nouvelle Procédure</h1>
        </div>
    </div>

    <div class="row">
        <div class="col-md-12">
            <div class="card">
                <div class="card-body">
                    <form asp-action="Create" method="post" enctype="multipart/form-data">
                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                        <div class="form-group">
                            <label asp-for="Title" class="control-label">Titre</label>
                            <input asp-for="Title" class="form-control" />
                            <span asp-validation-for="Title" class="text-danger"></span>
                        </div>

                        <div class="form-group">
                            <label asp-for="DocumentPath" class="control-label">Document</label>
                            <div class="custom-file">
                                <input type="file" class="custom-file-input" id="document" name="document" accept=".pdf,.docx,.png">
                                <label class="custom-file-label" for="document">Choisir un fichier</label>
                            </div>
                            <small class="form-text text-muted">Formats acceptés : PDF, DOCX, PNG</small>
                        </div>

                        <div class="form-group">
                            <label asp-for="Department" class="control-label">Département</label>
                            <select asp-for="Department" class="form-control">
                                <option value="">Sélectionner un département</option>
                                <option value="Ressources Humaines">Ressources Humaines</option>
                                <option value="Finance">Finance</option>
                                <option value="IT">IT</option>
                                <option value="Opérations">Opérations</option>
                                <option value="Compliance">Compliance</option>
                            </select>
                        </div>

                        <div class="form-group">
                            <label asp-for="AccessLevel" class="control-label">Niveau d'accès</label>
                            <select asp-for="AccessLevel" class="form-control">
                                <option value="C1">C1 - Accès standard</option>
                                <option value="C2">C2 - Accès restreint</option>
                                <option value="C3">C3 - Accès confidentiel</option>
                            </select>
                            <span asp-validation-for="AccessLevel" class="text-danger"></span>
                        </div>

                        <div class="form-group">
                            <label class="control-label">Services concernés</label>
                            <div class="form-check">
                                <input type="checkbox" class="form-check-input" name="AffectedServices" value="Front Office">
                                <label class="form-check-label">Front Office</label>
                            </div>
                            <div class="form-check">
                                <input type="checkbox" class="form-check-input" name="AffectedServices" value="Back Office">
                                <label class="form-check-label">Back Office</label>
                            </div>
                            <div class="form-check">
                                <input type="checkbox" class="form-check-input" name="AffectedServices" value="Support">
                                <label class="form-check-label">Support</label>
                            </div>
                        </div>

                        <div class="form-group">
                            <label asp-for="Recommendations" class="control-label">Préconisations</label>
                            <textarea asp-for="Recommendations" class="form-control" rows="3"></textarea>
                        </div>

                        <div class="form-group">
                            <button type="submit" class="btn btn-primary">
                                <i class="fas fa-save"></i> Enregistrer
                            </button>
                            <a asp-action="Index" class="btn btn-secondary">
                                <i class="fas fa-arrow-left"></i> Retour
                            </a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
    <script>
        $(document).ready(function() {
            // Mise à jour du nom du fichier sélectionné
            $('.custom-file-input').on('change', function() {
                var fileName = $(this).val().split('\\').pop();
                $(this).next('.custom-file-label').html(fileName);
            });
        });
    </script>
} 