@{
    ViewData["Title"] = "Modifier la Procédure";
}

<div class="container-fluid">
    <div class="row">
        <div class="col-md-8 offset-md-2">
            <div class="card">
                <div class="card-header">
                    <h5 class="mb-0">Modifier la procédure</h5>
                </div>
                <div class="card-body">
                    <form id="edit-procedure-form">
                        <input type="hidden" id="procedure-id" />
                        
                        <div class="form-group">
                            <label for="procedure-title">Titre</label>
                            <input type="text" class="form-control" id="procedure-title" required>
                        </div>

                        <div class="row">
                            <div class="col-md-6">
                                <div class="form-group">
                                    <label for="procedure-department">Département</label>
                                    <select class="form-control" id="procedure-department" required>
                                        <option value="">Sélectionner un département</option>
                                        <option value="Réseau">Réseau</option>
                                        <option value="Opérations">Opérations</option>
                                        <option value="Cartes">Cartes</option>
                                    </select>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="form-group">
                                    <label for="procedure-access-level">Niveau d'accès</label>
                                    <select class="form-control" id="procedure-access-level" required>
                                        <option value="">Sélectionner un niveau</option>
                                        <option value="1">Niveau 1</option>
                                        <option value="2">Niveau 2</option>
                                        <option value="3">Niveau 3</option>
                                    </select>
                                </div>
                            </div>
                        </div>

                        <div class="form-group">
                            <label for="procedure-services">Services concernés</label>
                            <input type="text" class="form-control" id="procedure-services" 
                                   placeholder="Séparer les services par des virgules" required>
                        </div>

                        <div class="form-group">
                            <label for="procedure-recommendations">Recommandations</label>
                            <textarea class="form-control" id="procedure-recommendations" rows="3"></textarea>
                        </div>

                        <div class="form-group">
                            <label for="procedure-document">Document</label>
                            <div class="custom-file">
                                <input type="file" class="custom-file-input" id="procedure-document" accept=".pdf">
                                <label class="custom-file-label" for="procedure-document">Choisir un fichier</label>
                            </div>
                            <small class="form-text text-muted">Format accepté : PDF</small>
                        </div>

                        <div class="row">
                            <div class="col-md-6">
                                <div class="form-group">
                                    <label for="procedure-creation-date">Date de création</label>
                                    <input type="date" class="form-control" id="procedure-creation-date" readonly>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="form-group">
                                    <label for="procedure-expiration">Date d'expiration</label>
                                    <input type="date" class="form-control" id="procedure-expiration" required>
                                </div>
                            </div>
                        </div>

                        <div class="form-group">
                            <label for="procedure-comment">Commentaire de modification</label>
                            <textarea class="form-control" id="procedure-comment" rows="2" required></textarea>
                        </div>

                        <div class="form-group">
                            <div class="custom-control custom-checkbox">
                                <input type="checkbox" class="custom-control-input" id="procedure-archive">
                                <label class="custom-control-label" for="procedure-archive">
                                    Archiver la version précédente
                                </label>
                            </div>
                        </div>

                        <div class="text-right">
                            <button type="button" class="btn btn-secondary" onclick="window.history.back()">
                                Annuler
                            </button>
                            <button type="submit" class="btn btn-primary">
                                Enregistrer les modifications
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        $(document).ready(function() {
            const procedureId = window.location.pathname.split('/').pop();
            const currentUserId = 'user1'; // ID utilisateur simulé

            // Charger les données de la procédure
            loadProcedureData();

            // Gestionnaire de soumission du formulaire
            $('#edit-procedure-form').submit(function(e) {
                e.preventDefault();
                saveProcedure();
            });

            // Gestionnaire de changement de fichier
            $('#procedure-document').change(function() {
                const fileName = $(this).val().split('\\').pop();
                $(this).next('.custom-file-label').text(fileName);
            });

            function loadProcedureData() {
                $.get(`/api/procedure/${procedureId}?userId=${currentUserId}`)
                    .done(function(procedure) {
                        $('#procedure-id').val(procedure.id);
                        $('#procedure-title').val(procedure.title);
                        $('#procedure-department').val(procedure.department);
                        $('#procedure-access-level').val(procedure.accessLevel);
                        $('#procedure-services').val(procedure.affectedServices);
                        $('#procedure-recommendations').val(procedure.recommendations);
                        $('#procedure-creation-date').val(new Date(procedure.creationDate).toISOString().split('T')[0]);
                        $('#procedure-expiration').val(new Date(procedure.expirationDate).toISOString().split('T')[0]);
                    });
            }

            function saveProcedure() {
                const formData = {
                    id: $('#procedure-id').val(),
                    title: $('#procedure-title').val(),
                    department: $('#procedure-department').val(),
                    accessLevel: parseInt($('#procedure-access-level').val()),
                    affectedServices: $('#procedure-services').val(),
                    recommendations: $('#procedure-recommendations').val(),
                    expirationDate: $('#procedure-expiration').val(),
                    comment: $('#procedure-comment').val(),
                    archivePrevious: $('#procedure-archive').is(':checked')
                };

                // Simuler l'envoi des données
                $.ajax({
                    url: `/api/procedure/${procedureId}`,
                    method: 'PUT',
                    contentType: 'application/json',
                    data: JSON.stringify(formData),
                    success: function() {
                        window.location.href = `/Procedure/Details/${procedureId}`;
                    },
                    error: function() {
                        alert('Une erreur est survenue lors de la sauvegarde.');
                    }
                });
            }
        });
    </script>

    <style>
        .custom-file-label::after {
            content: "Parcourir";
        }
    </style>
} 