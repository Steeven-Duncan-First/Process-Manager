@{
    ViewData["Title"] = "Nouvelle Procédure";
}

<div class="container-fluid">
    <div class="row">
        <div class="col-md-8 offset-md-2">
            <div class="card">
                <div class="card-header">
                    <h5 class="mb-0">Créer une nouvelle procédure</h5>
                </div>
                <div class="card-body">
                    <form id="create-procedure-form">
                        <div class="form-group">
                            <label for="procedure-title">Titre</label>
                            <input type="text" class="form-control" id="procedure-title" required>
                        </div>

                        <div class="row">
                            <div class="col-md-6">
                                <div class="form-group">
                                    <label for="procedure-department">Département</label>
                                    <select class="form-control" id="procedure-department" required>
                                        <option value="">Sélectionner un département</option>
                                        <option value="Réseau">Réseau</option>
                                        <option value="Opérations">Opérations</option>
                                        <option value="Cartes">Cartes</option>
                                    </select>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="form-group">
                                    <label for="procedure-access-level">Niveau d'accès</label>
                                    <select class="form-control" id="procedure-access-level" required>
                                        <option value="">Sélectionner un niveau</option>
                                        <option value="1">Niveau 1</option>
                                        <option value="2">Niveau 2</option>
                                        <option value="3">Niveau 3</option>
                                    </select>
                                </div>
                            </div>
                        </div>

                        <div class="form-group">
                            <label for="procedure-services">Services concernés</label>
                            <input type="text" class="form-control" id="procedure-services" 
                                   placeholder="Séparer les services par des virgules" required>
                        </div>

                        <div class="form-group">
                            <label for="procedure-recommendations">Recommandations</label>
                            <textarea class="form-control" id="procedure-recommendations" rows="3"></textarea>
                        </div>

                        <div class="form-group">
                            <label for="procedure-document">Document</label>
                            <div class="custom-file">
                                <input type="file" class="custom-file-input" id="procedure-document" accept=".pdf" required>
                                <label class="custom-file-label" for="procedure-document">Choisir un fichier</label>
                            </div>
                            <small class="form-text text-muted">Format accepté : PDF</small>
                        </div>

                        <div class="form-group">
                            <label for="procedure-expiration">Date d'expiration</label>
                            <input type="date" class="form-control" id="procedure-expiration" required>
                        </div>

                        <div class="form-group">
                            <label for="procedure-description">Description</label>
                            <textarea class="form-control" id="procedure-description" rows="3" required></textarea>
                        </div>

                        <div class="form-group">
                            <div class="custom-control custom-checkbox">
                                <input type="checkbox" class="custom-control-input" id="procedure-template">
                                <label class="custom-control-label" for="procedure-template">
                                    Utiliser comme modèle pour les futures procédures
                                </label>
                            </div>
                        </div>

                        <div class="text-right">
                            <button type="button" class="btn btn-secondary" onclick="window.history.back()">
                                Annuler
                            </button>
                            <button type="submit" class="btn btn-primary">
                                Créer la procédure
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        $(document).ready(function() {
            const currentUserId = 'user1'; // ID utilisateur simulé

            // Gestionnaire de soumission du formulaire
            $('#create-procedure-form').submit(function(e) {
                e.preventDefault();
                createProcedure();
            });

            // Gestionnaire de changement de fichier
            $('#procedure-document').change(function() {
                const fileName = $(this).val().split('\\').pop();
                $(this).next('.custom-file-label').text(fileName);
            });

            // Définir la date d'expiration par défaut à 1 an
            const defaultExpiration = new Date();
            defaultExpiration.setFullYear(defaultExpiration.getFullYear() + 1);
            $('#procedure-expiration').val(defaultExpiration.toISOString().split('T')[0]);

            function createProcedure() {
                const formData = new FormData();
                formData.append('title', $('#procedure-title').val());
                formData.append('department', $('#procedure-department').val());
                formData.append('accessLevel', $('#procedure-access-level').val());
                formData.append('affectedServices', $('#procedure-services').val());
                formData.append('recommendations', $('#procedure-recommendations').val());
                formData.append('expirationDate', $('#procedure-expiration').val());
                formData.append('description', $('#procedure-description').val());
                formData.append('isTemplate', $('#procedure-template').is(':checked'));
                formData.append('createdBy', currentUserId);
                formData.append('document', $('#procedure-document')[0].files[0]);

                // Simuler l'envoi des données
                $.ajax({
                    url: '/api/procedure',
                    method: 'POST',
                    data: formData,
                    processData: false,
                    contentType: false,
                    success: function(response) {
                        window.location.href = `/Procedure/Details/${response.id}`;
                    },
                    error: function() {
                        alert('Une erreur est survenue lors de la création de la procédure.');
                    }
                });
            }
        });
    </script>

    <style>
        .custom-file-label::after {
            content: "Parcourir";
        }
    </style>
} 