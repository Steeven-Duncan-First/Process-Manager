@{
    ViewData["Title"] = "Assistant Virtuel";
}

<div class="container-fluid">
    <div class="row">
        <div class="col-md-8 offset-md-2">
            <div class="card">
                <div class="card-header bg-primary text-white">
                    <h5 class="mb-0">Assistant Virtuel</h5>
                </div>
                <div class="card-body">
                    <div id="chat-container" class="chat-container" style="height: 400px; overflow-y: auto;">
                        <!-- Les messages seront injectés ici -->
                    </div>
                    <div class="mt-3">
                        <div class="input-group">
                            <input type="text" id="message-input" class="form-control" placeholder="Tapez votre message...">
                            <div class="input-group-append">
                                <button class="btn btn-primary" id="send-button">
                                    <i class="fas fa-paper-plane"></i>
                                </button>
                            </div>
                        </div>
                    </div>
                    <div class="mt-3">
                        <div class="btn-group" role="group">
                            <button type="button" class="btn btn-outline-primary quick-action">Questions fréquentes</button>
                            <button type="button" class="btn btn-outline-primary quick-action">Rechercher une procédure</button>
                            <button type="button" class="btn btn-outline-primary quick-action">Aide</button>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        $(document).ready(function() {
            const chatContainer = $('#chat-container');
            const messageInput = $('#message-input');
            const sendButton = $('#send-button');
            const quickActions = $('.quick-action');
            let currentUserId = 'user123'; // ID utilisateur simulé

            // Charger l'historique des messages
            loadChatHistory();

            // Envoyer un message
            function sendMessage() {
                const message = messageInput.val().trim();
                if (!message) return;

                // Ajouter le message de l'utilisateur
                appendMessage(message, true);
                messageInput.val('');

                // Simuler la réponse du chatbot
                simulateChatbotResponse(message);
            }

            // Ajouter un message à l'interface
            function appendMessage(message, isUser) {
                const messageDiv = $('<div>').addClass('message mb-3');
                const messageContent = $('<div>').addClass('message-content p-3 rounded');
                
                if (isUser) {
                    messageContent.addClass('bg-primary text-white ml-auto');
                } else {
                    messageContent.addClass('bg-light');
                }
                
                messageContent.text(message);
                messageDiv.append(messageContent);
                chatContainer.append(messageDiv);
                chatContainer.scrollTop(chatContainer[0].scrollHeight);
            }

            // Simuler la réponse du chatbot
            function simulateChatbotResponse(userMessage) {
                setTimeout(() => {
                    let response = '';
                    if (userMessage.toLowerCase().includes('procédure')) {
                        response = "J'ai trouvé plusieurs procédures pertinentes :\n" +
                                 "1. Procédure d'ouverture de compte\n" +
                                 "2. Procédure de virement\n" +
                                 "3. Procédure de clôture de compte";
                    } else if (userMessage.toLowerCase().includes('aide')) {
                        response = "Je peux vous aider avec :\n" +
                                 "- La recherche de procédures\n" +
                                 "- Les questions fréquentes\n" +
                                 "- Les guides d'utilisation";
                    } else {
                        response = "Je ne suis pas sûr de comprendre votre demande. Pouvez-vous la reformuler ?";
                    }
                    appendMessage(response, false);
                }, 1000);
            }

            // Charger l'historique des messages
            function loadChatHistory() {
                // Simuler le chargement de l'historique
                appendMessage("Bonjour ! Je suis votre assistant virtuel. Comment puis-je vous aider aujourd'hui ?", false);
            }

            // Gestionnaires d'événements
            sendButton.click(sendMessage);
            messageInput.keypress(function(e) {
                if (e.which == 13) {
                    sendMessage();
                }
            });

            quickActions.click(function() {
                const action = $(this).text();
                messageInput.val(action);
                sendMessage();
            });
        });
    </script>

    <style>
        .chat-container {
            border: 1px solid #dee2e6;
            border-radius: 0.25rem;
            padding: 1rem;
        }

        .message {
            max-width: 80%;
        }

        .message-content {
            word-wrap: break-word;
        }

        .quick-action {
            margin-right: 0.5rem;
        }
    </style>
} 